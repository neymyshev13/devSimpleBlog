
<atricle class="post">
  <section class="post-head">
    <h1><%= @post.title %></h1>
    <small>
      <time><%= @post.created_at.strftime("%d %B, %Y") %></time>
      |
      <%= link_to 'Изменить', edit_post_path(@post)%>
      <%= link_to 'Удалить', post_path(@post), method: :delete, data: { confirm: 'Ты кого удалить собрался!? А ну иди сюда, я сам тебя удалю! Ублюдок,мать твою!' } %>
    </small>
 </section>

  <section class="post-body">
    <%= image_tag @post.image.url(:large), class: 'img-show' if @post.image? %><br>
    <%= @post.body.html_safe %>
  </section>
</atricle>

<%= render 'disqus' %>

